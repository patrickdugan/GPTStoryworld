{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TaskEpisode",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "prompt": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "role": {
            "type": "string"
          },
          "content": {
            "type": "string"
          }
        },
        "required": [
          "role",
          "content"
        ]
      }
    },
    "tools": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "gold_check": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "predicate"
          ]
        },
        "expr": {
          "type": "string"
        }
      },
      "required": [
        "type",
        "expr"
      ]
    },
    "scoring": {
      "type": "object",
      "properties": {
        "reward": {
          "type": "number"
        }
      },
      "required": [
        "reward"
      ]
    }
  },
  "required": [
    "id",
    "prompt",
    "gold_check",
    "scoring"
  ]
}