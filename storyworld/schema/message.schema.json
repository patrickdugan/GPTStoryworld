{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Diplomacy Storyworld Message",
  "type": "object",
  "additionalProperties": false,
  "required": ["from", "to", "type", "content"],
  "properties": {
    "from": {
      "type": "string",
      "minLength": 1
    },
    "to": {
      "type": "string",
      "minLength": 1
    },
    "type": {
      "type": "string",
      "minLength": 1
    },
    "content": {
      "type": "string",
      "minLength": 1
    },
    "belief_commitments": {
      "type": "object",
      "additionalProperties": {
        "type": "number"
      }
    },
    "meta": {
      "type": "object",
      "additionalProperties": true
    }
  }
}
