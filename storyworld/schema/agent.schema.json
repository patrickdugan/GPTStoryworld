{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Diplomacy Storyworld Agent",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "name"],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1,
      "pattern": "^[A-Za-z][A-Za-z0-9_-]*$"
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "role": {
      "type": "string"
    },
    "goal": {
      "type": "string"
    },
    "attributes": {
      "type": "object",
      "additionalProperties": {
        "type": ["string", "number", "boolean"]
      }
    }
  }
}
